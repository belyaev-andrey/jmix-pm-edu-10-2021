<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:app="http://schemas.company.com/demo/0.1/app-ui-components.xsd"
        caption="msg://projectTaskEdit.caption"
        focusComponent="form">
    <data>
        <instance id="projectTaskDc"
                  class="com.company.jmixpm.entity.ProjectTask">
            <fetchPlan extends="_base">
                <property name="assignee" fetchPlan="_base"/>
                <property name="project"/>
            </fetchPlan>
            <loader/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="auto"
                width="auto"/>
    <layout spacing="true" expand="editActions">
        <form id="form" dataContainer="projectTaskDc">
            <column width="350px">
                <textField id="nameField" property="name"/>
                <dateField id="startDateField" property="startDate"/>
                <dateField id="endDateField" property="endDate"/>

                <app:stepper id="estimatedEffortsField"
                             property="estimatedEfforts"
                             minValue="0" maxValue="20"/>

                <entityPicker id="assigneeField" property="assignee">
                    <actions>
                        <action id="entityLookup" type="entity_lookup"/>
                        <action id="entityClear" type="entity_clear"/>
                    </actions>
                </entityPicker>
                <entityPicker id="projectField" property="project"/>
                <fileStorageUpload id="fileUpload"
                                   property="attachement"
                                   showClearButton="true"
                                   showFileName="true"
                                   uploadButtonIcon="UPLOAD"
                                   clearButtonIcon="EDITOR_CANCEL"
                />

<!--                <field id="colorField" property="color"/>-->
                <app:colorField id="colorField" property="color" required="true"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>